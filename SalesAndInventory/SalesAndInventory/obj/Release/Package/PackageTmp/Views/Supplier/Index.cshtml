@model SalesAndInventory.ViewModels.SupplierListViewModel

@{
    ViewBag.Title = "Supplier";
    ViewBag.Link = "supplier";
    int listCounter = 0;
}

<h2>
    Supplier
    <span class="pull-right"><a href="/Supplier/Create" class="btn btn-blue btn-outline" type="button"><i class="icon-plus"></i> Add Supplier</a></span>
</h2>

<div class="row">
    <div class="col-lg-12 animatedParent animateOnce z-index-50">
        <div class="panel panel-default animated fadeInUp">
            <div class="panel-heading clearfix">
                <h3 class="panel-title"><i class="icon-list"></i> List</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="table-responsive" style="overflow-x: hidden">
                    <table class="table table-striped table-bordered table-hover supplier-list">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Contact Person Name</th>
                                <th>Contact Person #</th>
                                <th>Contact Person Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var supplier in Model.SupplierList)
                            {
                                listCounter++; ViewBag.Counter = listCounter;
                                <tr>
                                    <td>@ViewBag.Counter</td>
                                    <td>@supplier.Name</td>
                                    <td>@supplier.Address</td>
                                    <td>@supplier.ContactName</td>
                                    <td>@supplier.ContactNumber</td>
                                    <td>@supplier.ContactEmail</td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Contact Person Name</th>
                                <th>Contact Person #</th>
                                <th>Contact Person Email</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <link href="/Content/css/plugins/datatables/jquery.dataTables.css" rel="stylesheet">
    <link href="/Scripts/js/plugins/datatables/extensions/Buttons/css/buttons.dataTables.css" rel="stylesheet">
    @Scripts.Render("~/bundles/dataTables")

    <script>
        $(document).ready(function () {
            $('.supplier-list').DataTable();
        });
    </script>
}