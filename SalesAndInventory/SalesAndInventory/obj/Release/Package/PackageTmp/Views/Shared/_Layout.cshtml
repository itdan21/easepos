<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Sales&Inventory</title>


    <link href="~/Content/css/entypo.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/plugins/css3-animate-it-plugin/animations.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/mouldifi-core.css" rel="stylesheet" />
    <link href="~/Content/css/mouldifi-forms.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>

    <div class="page-container">
        @*Sidebar*@
        @Html.Partial("_PageSidebar")

        <div class="main-container gray-bg">
            @*Header*@
            @Html.Partial("_MainHeader")

            @*Content*@
            <div class="main-content">
                @RenderBody()

                <footer class="animatedParent animateOnce z-index-10">
                    <div class="footer-main animated fadeInUp slow">&copy; 2018 <strong>Sales & Inventory</strong> powered by <a target="_blank" href="#/">ssh.com.ph</a> </div>
                </footer>
            </div>
        </div>
    </div>


    <script src="~/Scripts/js/jquery.min.js"></script>


    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/css3AnimateIt")
    @Scripts.Render("~/bundles/floatChart")

    @*Add-ons*@
    <script src="~/Scripts/notify.min.js"></script>

    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $(document).find('.sidebar-link').removeClass('active');
            var link = "@ViewBag.Link";
            $(document).find('#link-' + link).addClass('active');
        });
    </script>
</body>
</html>
